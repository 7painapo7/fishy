<div class="container">
<p class="center">管理者ログイン</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field center">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス *', autocomplete: "email" %>
  </div>

  <div class="field center">
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: 'パスワード *',  autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions center">
    <%= f.submit "ログイン", class: "btn btn-success" %>
  </div>
<% end %>

  <div class="center">
  <%= render "admins/shared/links" %>
  </div>

</div>