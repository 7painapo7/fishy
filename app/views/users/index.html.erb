<!-- 検索窓 -->
  <div class="row search_container">
	<%= search_form_for @q do |f| %>

    <%= f.text_field :name_cont, placeholder: 'ユーザー名を入力...', class: "search-box" %>
    <i class="fa fa-search glyphicon glyphicon-search search-icon"><%= f.submit ("検索する"), id: "search-submit"%></i>
  <% end %>
  </div>


<% @users.each do |user| %>
	<div class="user_row row">
		<div class="col-xs-3">
		<%= image_tag user.image.to_s, class: "user_icon" %>
		</div>
<!-- 		<div class="col-xs-2">
		<p><%= user.name %></p>
		</div> -->
		<div class="col-xs-3">
		<p><%= link_to user.name, user_path(user.id) %></p>
		</div>
		<div class="col-xs-3">
		<p><%= user.introduction %></p>
		</div>
		<% if user.group_id == nil %>
			<div class="col-xs-3">
			<%= form_for user, url: group_path(user.id), method: :PATCH do |c| %>
			<p><%= c.submit 'グループに招待', class: "btn btn-info" %></p>
			<% end %>
			</div>
		<% else %>
			<div class="col-xs-3">
			<p>グループに参加中</p>
			</div>
		<% end %>
	</div>
<% end %>


<%= link_to "ルールを決定", group_path(current_user), class: "btn btn-default col-xs-12" %>