<%= form_for(@user) do |f| %><br>
<%= f.label :image %><br>
<%= f.file_field :image %><br>
<%= f.label :name %><br>
<%= f.text_field :name, autofocus: true, placeholder:"名前"%><br>
<%= f.label :introduction %><br>
<%= f.text_field :introduction, autofocus: true %><br>
<%= f.submit "Update User" %><br>
<% end %>

<%= link_to "Destroy", user_path(@user.id),class: "btn btn-default active", method: :delete,data: { confirm: '本当に消しますか？' } %>