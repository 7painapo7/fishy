<%= form_for(@user) do |f| %>
image
<%= f.label :image %>
<%= f.file_field :image %>

name
<%= f.text_field :name, autofocus: true, placeholder:"名前"%>
introduction
<%= f.text_field :introduction, autofocus: true %>
<%= f.submit "Update User" %>
<% end %>

<%= link_to "Destroy", user_path(@user.id), method: :delete,data: { confirm: '本当に消しますか？' } %>