<div class="center">
  <p>ログイン</p>

  <%= image_tag('logo150.png') %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレス *', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, placeholder: 'パスワード *', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

  <div class="center">
  <%= render "users/shared/links", class: "center" %>
  </div>